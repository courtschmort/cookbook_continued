<h1>Recipes</h1>

<% if @recipes.any? %>
<ul>
  <% @recipes.each do |recipe| %>
  <li><%= link_to recipe.title, recipe_path(recipe) %></li>
  <% end %>
</ul>
<% else %>
<p>There are no recipes yet.</p>
<% end %>

<p><%= link_to "Create new recipe", new_recipe_path %></p>
<p><%= link_to "View all tags", tags_path %></p>
