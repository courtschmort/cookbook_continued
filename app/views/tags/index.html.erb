<h1>Tags</h1>

<% if @tags.any? %>
<ul>
  <% @tags.each do |tag| %>
  <li><%= link_to tag.categories, tag_path(tag) %></li>
  <% end %>
</ul>
<% else %>
<p>There are no tags yet.</p>
<% end %>

<p><%= link_to "Create new tag", new_tag_path %></p>
<p><%= link_to "Return to recipes", recipes_path %></p>
